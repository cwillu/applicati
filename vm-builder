sudo ubuntu-vm-builder kvm hardy \
  --arch 'i386'  --mem '256'  --rootsize '4096'  --swapsize '1024'  \
  --kernel-flavour 'virtual'  --hostname 'applicati-1'  --domain 'cwillu.com'  \
  --mirror 'http://archive.ubuntu.com/ubuntu'  --components 'main,restricted,universe'  \
  --addpkg 'python-docutils python-turbogears python-crypto' \
  --addpkg 'git-core openssh-server x11vnc ubuntu-desktop'  \
  --name 'Carey Underwood'  --user 'cwillu'  \
  --ssh-key 'ssh-rsa  cwillu@dominubuntu' 

sudo ubuntu-vm-builder kvm intrepid --arch 'i386'  --mem '256'  --rootsize '4096'  --swapsize '1024'  --kernel-flavour 'virtual'  --hostname 'applicati-1'  --domain 'cwillu.com'  --mirror 'http://ca.archive.ubuntu.com/ubuntu'  --components 'main,universe'  --addpkg 'ubuntu-desktop python-turbogears python-crypto openssh-server x11vnc'  --name 'Carey Underweood'  --user 'cwillu'  --ssh-key 'ssh-rsa  cwillu@dominubuntu'
